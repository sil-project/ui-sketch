<div class="ui menu">
    {% if list.filters|length > 0 %}
    <div class="item">
        <div class="ui primary floating compact multiple dropdown right labeled icon button filter list">
            <i class="filter icon"></i>
            <input name="filters" type="hidden">
            <span class="text">Filtres</span>

            <div class="menu">
                <div class="scrolling menu">
                    {% for filter in list.filters %}
                        <div class="item" data-value="{{ filter.name }}">
                            {{ filter.label }}
                        </div>
                    {% endfor %}
                </div>

            </div>

        </div>
    </div>
    {% endif %}

    <div class="right menu">
        {% include '@Template/List/Table/export.html.twig' %}
    </div>

</div>

<form class="ui form filters segments">

    {% for filter in list.filters %}

        <div class="ui segment filter" data-name="{{ filter.name }}">
            {% include '@Template/Form/' ~ filter.type ~ '.html.twig' with {
                'field' : filter
            } %}
        </div>

    {% endfor %}

</form>

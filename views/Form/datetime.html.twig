{% if field.form.class is not defined %}
    {% set fieldClass = 'ui calendar field' %}
{% else %}
    {% set fieldClass = 'ui calendar field ' ~ field.form.class %}
{% endif %}

<div class="{{ fieldClass }}{% if field.form.readonly %} readonly{% endif %}" data-type="datetime">
    {% if field.label is defined and field.label is not null %}<label>{{ field.label }}</label>{% endif %}
    <div class="ui input left icon">
        <i class="calendar icon"></i>
        <input type="text" placeholder="{{ field.label }}" {% if field.form.disabled %}disabled="disabled"{% endif %}>
    </div>
</div>

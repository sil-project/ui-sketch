{# ##################################################################################### #}
{#    INPUT CLASS                                                                        #}
{# ##################################################################################### #}

{% set fieldClass = null %}

{% if field.form.class is defined %}
    {% set fieldClass = field.form.class %}
{% endif %}

{# ##################################################################################### #}
{#    INPUT                                                                              #}
{# ##################################################################################### #}

<input
    type="hidden"
    name="{{ field.name }}"
    value="{{ field.value }}"
    tabindex="-1"
    {% if fieldClass is not null %} class="{{ fieldClass }}" {% endif %}
/>

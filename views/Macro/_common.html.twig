{% macro field_group(view, fields, editable) %}
    {% spaceless %}
        <table class="ui very basic striped celled table">
            <tbody>
                {% for fieldname in fields %}
                    <tr>
                        {% set field = attribute(view, fieldname) %}
                        <td class="right aligned four wide">
                            <strong>{{ field.label }}</strong>
                        </td>
                        <td>{{ field.value }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if editable == true %}
            <form class="ui form" method="POST" action="">
                {% for fieldname in fields %}
                    {% set field = attribute(view, fieldname) %}
                    {% include '@Template/Form/' ~ field.form.type ~ '.html.twig' with {
                        'field' : field
                    } %}
                {% endfor %}
                <div class="ui divider"></div>
                <button class="ui button submit primary" type="submit">Enregistrer</button>
            </form>
        {% endif %}
    {% endspaceless %}
{% endmacro %}
